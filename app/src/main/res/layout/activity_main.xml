<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#D3D0D0" />

        <RadioGroup
            android:id="@+id/radioGroup_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <RadioButton
                android:id="@+id/bottomTab1"
                style="@style/BottomTabStyle"
                android:checked="true"
                android:drawableTop="@drawable/selector_bottom_tab01"
                android:text="首页" />

            <RadioButton
                android:id="@+id/bottomTab2"
                style="@style/BottomTabStyle"
                android:drawableTop="@drawable/selector_bottom_tab02"
                android:text="体系" />

            <RadioButton
                android:id="@+id/bottomTab3"
                style="@style/BottomTabStyle"
                android:drawableTop="@drawable/selector_bottom_tab03"
                android:text="导航" />

            <RadioButton
                android:id="@+id/bottomTab4"
                style="@style/BottomTabStyle"
                android:drawableTop="@drawable/selector_bottom_tab04"
                android:text="项目" />

        </RadioGroup>

    </LinearLayout>

</RelativeLayout>